{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "target": "es2017",
        "jsx": "react",
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "experimentalDecorators": false,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "baseUrl": "./src",
		"lib": [ "es5", "dom" ],
        "isolatedModules": true,
        "incremental": true,
        "types": [ "node", "@rspack/core/module" ],

        "paths": {
            "json": [
                "json"
            ],
            "Component/*": [
                "ts/component/*"
            ],
            "Component": [
                "ts/component"
            ],
            "Interface/*": [
                "ts/interface/*"
            ],
            "Interface": [
                "ts/interface"
            ],
            "Docs/*": [
                "ts/docs/*"
            ],
            "Docs": [
                "ts/docs"
            ],
            "Lib/*": [
              "ts/lib/*"
            ],
            "Lib": [
				"ts/lib"
            ],
            "Model/*": [
              "ts/model/*"
            ],
            "Model": [
				"ts/model"
            ],
            "Store/*": [
                "ts/store/*",
            ],
            "Store": [
                "ts/store",
            ],
			"Hook/*": [
                "ts/hook/*",
            ],
			"Hook": [
                "ts/hook",
            ],
			"dist/*": [
                "../dist/*"
            ],
          }
    },
	"include": [
		"src/**/*"
	],
    "exclude": [ 
		"node_modules/**/*", 
		"dist/**/*", 
	]
}