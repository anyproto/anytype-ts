{
	"compilerOptions": {
		"outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "Preserve",
        "target": "ES2021",
        "jsx": "react",
        "moduleResolution": "Node",
		"esModuleInterop": true,
        "allowJs": true,
        "lib": [ "es5", "dom" ],
        "isolatedModules": true,
        "incremental": false,
        "types": ["node", "@rspack/core/module"],

		"rootDirs": ["./src/"],
		"baseUrl": "./",
		"paths": {
			"json": ["./src/json"],
			"json/*": ["./src/json/*"],
			"Component": ["./src/ts/component"],
			"Component/*": ["./src/ts/component/*"],
			"Interface": ["./src/ts/interface"],
			"Interface/*": ["./src/ts/interface/*"],
			"Docs": ["./src/ts/docs"],
			"Docs/*": ["./src/ts/docs/*"],
			"Lib": ["./src/ts/lib"],
			"Lib/*": ["./src/ts/lib/*"],
			"Model": ["./src/ts/model"],
			"Model/*": ["./src/ts/model/*"],
			"Store": ["./src/ts/store"],
			"Store/*": ["./src/ts/store/*"],
			"Hook": ["./src/ts/hook"],
			"Hook/*": ["./src/ts/hook/*"],
			"dist/*": ["./dist/*"]
		},
	},
	
	"isolatedModules": true,
	"incremental": true,
	"types": ["node", "@rspack/core/module"],

	"include": ["src/**/*", "*.cjs", "*.js"],
	"exclude": ["node_modules/**/*", "dist/**/*"]
}
